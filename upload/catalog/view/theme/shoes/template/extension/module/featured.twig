                                                            {% else %}
                                                                <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </div>
                                                {% endif %}
                                                {% if product.price %}
                                                    <div class="price">
                                                        {% if not product.special %}
                                                            <span class="price-new">{{ products[i].price }}</span>
                                                        {% else %}
                                                            <span class="price-old">{{ products[i].special }}</span> <span class="price-new">{{ products[i].price }}</span>
                                                        {% endif %}
                                                    </div>
                                                {% endif %}
                                                <div class="only-hover">
                                                    <ul>
                                                        <li><a onclick="cart.add('{{ products[i].product_id }}');" data-toggle="tooltip" data-original-title="{{ button_cart }}"><i class="fa fa-shopping-cart"></i></a></li>


                                                        <li><a onclick="compare.add('{{ products[i].product_id }}');" data-toggle="tooltip" data-original-title="{{ button_compare }}"><i class="fa fa-exchange"></i></a></li>

                                                        <li><a onclick="wishlist.add('{{ products[i].product_id }}');" data-toggle="tooltip" data-original-title="{{ button_wishlist }}"><i class="fa fa-heart"></i></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>