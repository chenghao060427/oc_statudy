{{ header }}
<!-- BREADCRUMB
================================================== -->
<div class="breadcrumb full-width">
    <div class="background-breadcrumb"></div>
    <div class="background">
        <div class="shadow"></div>
        <div class="pattern">
            <div class="container">
                <div class="clearfix">
                    <h1 id="title-page"> {{ heading_title }} </h1>

                    <ul>
                        {% for breadcrumb in breadcrumbs %}
                            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- MAIN CONTENT
	================================================== -->
<div class="main-content full-width inner-page">
    <div class="background-content"></div>
    <div class="background">
        <div class="shadow"></div>
        <div class="pattern">
            <div class="container">


                <div class="row">

                    <div class="col-md-12">


                        <div class="row">
                            {{ column_left }}
                            {% if column_left and column_right %}
                                {% set class = 'col-sm-6' %}
                            {% elseif column_left or column_right %}
                                {% set class = 'col-sm-9' %}
                            {% else %}
                                {% set class = 'col-sm-12' %}
                            {% endif %}
                            <div class="{{ class }} center-column content-with-background" id="content">
                                {{ content_top }}
                                {% if categories %}
                                    <p><b>{{ text_index }}</b>
                                        {% for category in categories %}
                                        &nbsp;&nbsp;&nbsp;<a href="index.php?route=product/manufacturer#{{ category.name }}"><b>{{  category.name }}</b></a>
                                        {% endfor %}
                                    </p>

                                    {% for category in categories %}
                                        <div class="manufacturer-list">
                                            <div class="manufacturer-heading">{{ category.name }}<a id="{{ category.name }}"></a></div>
                                            {% if category.manufacturer %}
                                                {% for manufacturers in category.manufacturer|batch(4) %}
                                                    <div class="manufacturer-content">
                                                        <ul>
                                                            {% for manufacturer in manufacturers %}
                                                                <li><a href="{{ manufacturer.href }}">{{ manufacturer.name }}</a></li>
                                                            {% endfor %}
                                                        </ul>
                                                    </div>
                                                {% endfor %}
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    <p><b>{{ text_empty }}</b></p>
                                    <div class="buttons clearfix">
                                        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
                                    </div>
                                {% endif %}
                                {{ content_bottom }}
                            </div>
                            {{ column_right }}
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ footer }}