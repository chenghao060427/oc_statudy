{{ header }}
<!-- BREADCRUMB
================================================== -->
<div class="breadcrumb full-width">
    <div class="background-breadcrumb"></div>
    <div class="background">
        <div class="shadow"></div>
        <div class="pattern">
            <div class="container">
                <div class="clearfix">
                    <h1 id="title-page"> {{ heading_title }} </h1>

                    <ul>
                        {% for breadcrumb in breadcrumbs %}
                            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- MAIN CONTENT
	================================================== -->
<div class="main-content full-width inner-page">
    <div class="background-content"></div>
    <div class="background">
        <div class="shadow"></div>
        <div class="pattern">
            <div class="container">


                <div class="row">

                    <div class="col-md-12">


                        <div class="row">
                            {{ column_left }}
                            {% if column_left and column_right %}
                                {% set class = 'col-sm-6' %}
                            {% elseif column_left or column_right %}
                                {% set class = 'col-sm-9' %}
                            {% else %}
                                {% set class = 'col-sm-12' %}
                            {% endif %}
                            <div class="{{ class }} center-column content-without-background" id="content">
                                {{ content_top }}

                                {% if products %}
                                <div id="mfilter-content-container">
                                    <!-- Filter -->
                                    <div class="product-filter clearfix">
                                        <div class="options">

                                            <div class="button-group display" data-toggle="buttons-radio">
                                                <button class="active" id="grid" rel="tooltip" title="{{ button_grid }}" onclick="display('grid');"><i class="fa fa-th-large"></i></button>
                                                <button id="list" rel="tooltip" title="{{ button_list }}" onclick="display('list');"><i class="fa fa-th-list"></i></button>
                                            </div>
                                            <div class="product-compare"><a href="{{ compare }}" id="compare-total">{{ text_compare }}</a></div>

                                        </div>

                                        <div class="list-options">
                                            <div class="sort">
                                                <div class="select"><select onchange="location = this.value;">
                                                        {% for sorts in sorts %}
                                                            {% if sorts.value == '%s-%s'|format(sort, order) %}

                                                                <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>

                                                            {% else %}

                                                                <option value="{{ sorts.href }}">{{ sorts.text }}</option>

                                                            {% endif %}
                                                        {% endfor %}

                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;sort=p.sort_order&amp;order=ASC" selected="selected">Default</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;sort=pd.name&amp;order=ASC">Name (A - Z)</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;sort=pd.name&amp;order=DESC">Name (Z - A)</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;sort=ps.price&amp;order=ASC">Price (Low &gt; High)</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;sort=ps.price&amp;order=DESC">Price (High &gt; Low)</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;sort=rating&amp;order=DESC">Rating (Highest)</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;sort=rating&amp;order=ASC">Rating (Lowest)</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;sort=p.model&amp;order=ASC">Model (A - Z)</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;sort=p.model&amp;order=DESC">Model (Z - A)</option>#}
                                                    </select></div>
                                            </div>

                                            <div class="limit">
                                                <div class="select">
                                                    <select onchange="location = this.value;">
                                                        {% for limits in limits %}
                                                            {% if limits.value == limit %}

                                                                <option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>

                                                            {% else %}

                                                                <option value="{{ limits.href }}">{{ limits.text }}</option>

                                                            {% endif %}
                                                        {% endfor %}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;limit=15" selected="selected">15</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;limit=25">25</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;limit=50">50</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;limit=75">75</option>#}
                                                        {#<option value="http://fastortheme.com/medic/index.php?route=product/special&amp;limit=100">100</option>#}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Products list -->
                                    <div class="product-list">
                                        {% for product in products %}
                                        <!-- Product -->
                                        <div>
                                            <div class="row">
                                                <div class="image col-sm-3">
                                                    {#<div class="sale">Sale</div>#}

                                                    <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}"></a>

                                                    {#<script>#}
                                                        {#$(function () {#}
                                                            {#var austDay = new Date();#}
                                                            {#austDay = new Date(2020, 06 - 1, 13);#}
                                                            {#$('#countdown14575968').countdown({until: austDay});#}
                                                        {#});#}
                                                    {#</script>#}
                                                    {#<div id="countdown14575968" class="clearfix is-countdown"><span class="countdown-row countdown-show4"><span class="countdown-section"><span class="countdown-amount">49</span><span class="countdown-period">Days</span></span><span class="countdown-section"><span class="countdown-amount">8</span><span class="countdown-period">Hours</span></span><span class="countdown-section"><span class="countdown-amount">27</span><span class="countdown-period">Min</span></span><span class="countdown-section"><span class="countdown-amount">31</span><span class="countdown-period">Sec</span></span></span></div>#}


                                                </div>

                                                <div class="name-actions col-sm-4">
                                                    <div class="name"><a href="{{ product.href }}">{{ product.name }}</a></div>
                                                    {% if product.price %}
                                                        <div class="price">
                                                            {% if not product.special %}
                                                                {{ product.price }}
                                                            {% else %}
                                                                <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
                                                            {% endif %}
                                                            {% if product.tax %}
                                                                <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                                                            {% endif %}
                                                            {#<span class="price-old">$122.00</span> <span class="price-new">$110.00</span>#}
                                                        </div>
                                                    {% endif %}
                                                    {% if product.rating %}
                                                        <div class="rating">
                                                            {% for i in 1..5 %}
                                                                {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
                                                            {% endfor %}
                                                        </div>
                                                    {% endif %}
                                                    <ul>
                                                        <li><a onclick="cart.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>


                                                        <li><a onclick="compare.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="Add to compare"><i class="fa fa-exchange"></i></a></li>

                                                        <li><a onclick="wishlist.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="Add to wishlist"><i class="fa fa-heart"></i></a></li>
                                                    </ul>
                                                </div>

                                                <div class="desc col-sm-5">
                                                    <div class="description">
                                                            {{ product.description }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {% endfor %}
                                    </div>

                                    <!-- Products grid -->

                                    <div class="product-grid active">
                                        <div class="row">
                                            {% for product in products %}
                                            <div class="col-sm-3 col-xs-6">

                                                <!-- Product -->
                                                <div class="product clearfix product-hover">
                                                    <div class="left">
                                                        {#<div class="sale">Sale</div>#}

                                                        <div class="image ">
                                                            <a href="{{ product.href }}">

                                                                <img src="{{ product.thumb }}" alt="{{ product.name }}" class="">
                                                            </a>
                                                        </div>
                                                        {#<script>#}
                                                            {#$(function () {#}
                                                                {#var austDay = new Date();#}
                                                                {#austDay = new Date(2020, 06 - 1, 13);#}
                                                                {#$('#countdown1988286').countdown({until: austDay});#}
                                                            {#});#}
                                                        {#</script>#}
                                                        {#<div id="countdown1988286" class="clearfix is-countdown"><span class="countdown-row countdown-show4"><span class="countdown-section"><span class="countdown-amount">49</span><span class="countdown-period">Days</span></span><span class="countdown-section"><span class="countdown-amount">8</span><span class="countdown-period">Hours</span></span><span class="countdown-section"><span class="countdown-amount">27</span><span class="countdown-period">Min</span></span><span class="countdown-section"><span class="countdown-amount">31</span><span class="countdown-period">Sec</span></span></span></div>#}
                                                    </div>
                                                    <div class="right">
                                                        <div class="name"><a href="{{ product.href }}">{{ product.name }}</a></div>
                                                        {% if product.price %}
                                                            <div class="price">
                                                                {% if not product.special %}
                                                                    {{ product.price }}
                                                                {% else %}
                                                                    <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
                                                                {% endif %}
                                                                {% if product.tax %}
                                                                    <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                                                                {% endif %}
                                                            </div>
                                                        {% endif %}
                                                        {% if product.rating %}
                                                            <div class="rating">
                                                                {% for i in 1..5 %}
                                                                    {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
                                                                {% endfor %}
                                                            </div>
                                                        {% endif %}
                                                        <div class="only-hover">
                                                            <ul>
                                                                <li><a onclick="cart.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>


                                                                <li><a onclick="compare.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="Add to compare"><i class="fa fa-exchange"></i></a></li>

                                                                <li><a onclick="wishlist.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="Add to wishlist"><i class="fa fa-heart"></i></a></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endfor %}

                                        </div>
                                    </div>

                                    <div class="row pagination-results">
                                        <div class="col-sm-6 text-left">{{ pagination }}</div>
                                        <div class="col-sm-6 text-right">{{ results }}</div>
                                    </div>

                                    <script type="text/javascript"><!--
                                        function display(view) {

                                            if (view == 'list') {
                                                $('.product-grid').removeClass("active");
                                                $('.product-list').addClass("active");

                                                $('.display').html('<button id="grid" rel="tooltip" title="Grid" onclick="display(\'grid\');"><i class="fa fa-th-large"></i></button> <button class="active" id="list" rel="tooltip" title="List" onclick="display(\'list\');"><i class="fa fa-th-list"></i></button>');

                                                localStorage.setItem('display', 'list');
                                            } else {

                                                $('.product-grid').addClass("active");
                                                $('.product-list').removeClass("active");

                                                $('.display').html('<button class="active" id="grid" rel="tooltip" title="Grid" onclick="display(\'grid\');"><i class="fa fa-th-large"></i></button> <button id="list" rel="tooltip" title="List" onclick="display(\'list\');"><i class="fa fa-th-list"></i></button>');

                                                localStorage.setItem('display', 'grid');
                                            }
                                        }

                                        if (localStorage.getItem('display') == 'list') {
                                            display('list');
                                        } else {
                                            display('grid');
                                        }
                                        //--></script>

                                </div>
                                {% else %}
                                    <p>{{ text_empty }}</p>
                                    <div class="buttons clearfix">
                                        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
                                    </div>
                                {% endif %}
                                {{ content_bottom }}
                            </div>
                            {{ column_right }}
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ footer }}