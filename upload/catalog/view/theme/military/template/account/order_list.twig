{{ header }}
<!-- BREADCRUMB
================================================== -->
<div class="breadcrumb full-width">
    <div class="background-breadcrumb"></div>
    <div class="background">
        <div class="shadow"></div>
        <div class="pattern">
            <div class="container">
                <div class="clearfix">
                    <h1 id="title-page"> {{ heading_title }} </h1>

                    <ul>
                        {% for breadcrumb in breadcrumbs %}
                            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- MAIN CONTENT
	================================================== -->
<div class="main-content full-width inner-page">
    <div class="background-content"></div>
    <div class="background">
        <div class="shadow"></div>
        <div class="pattern">
            <div class="container">


                <div class="row">

                    <div class="col-md-12">

                        <div class="row">
                            {{ column_left }}
                            {% if column_left and column_right %}
                                {% set class = 'col-md-6' %}
                            {% elseif column_left or column_right %}
                                {% set class = 'col-md-9' %}
                            {% else %}
                                {% set class = 'col-md-12' %}
                            {% endif %}
                            <div class="{{ class }} center-column content-with-background" id="content">

                                {{ content_top }}
                                {% if orders %}
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <td class="text-left">Order ID</td>
                                                <td class="text-left">Order Status</td>
                                                <td class="text-left">Date Added</td>
                                                <td class="text-left">No. of Products</td>
                                                <td class="text-left">Customer</td>
                                                <td class="text-left">Total</td>
                                                <td></td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for order in orders %}
                                                <tr>
                                                    <td class="text-right">#{{ order.order_id }}</td>
                                                    <td class="text-left">{{ order.status }}</td>
                                                    <td class="text-left">{{ order.date_added }}</td>
                                                    <td class="text-right">{{ order.products }}</td>
                                                    <td class="text-left">{{ column_customer }}</td>
                                                    <td class="text-right">{{ order.total }}</td>
                                                    <td>
                                                    <a href="{{ order.view }}" data-toggle="tooltip" title="{{ button_view }}" class="btn btn-info" data-original-title="View">
                                                       <i class="fa fa-eye"></i>
                                                    </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    {#<div class="table-responsive">#}
                                        {#<table class="table table-bordered table-hover">#}
                                            {#<thead>#}
                                            {#<tr>#}
                                                {#<td class="text-right">{{ column_order_id }}</td>#}
                                                {#<td class="text-left">{{ column_status }}</td>#}
                                                {#<td class="text-left">{{ column_date_added }}</td>#}
                                                {#<td class="text-right">{{ column_product }}</td>#}
                                                {#<td class="text-left">{{ column_customer }}</td>#}
                                                {#<td class="text-right">{{ column_total }}</td>#}
                                                {#<td></td>#}
                                            {#</tr>#}
                                            {#</thead>#}
                                            {#<tbody>#}

                                            {#</tbody>#}
                                        {#</table>#}
                                    {#</div>#}
                                {% else %}
                                    <p>{{ text_empty }}</p>
                                {% endif %}


                                <div class="buttons clearfix">
                                    <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
                                </div>
                                {{ content_bottom }}
                            </div>

                            {{ column_right }}
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ footer }}