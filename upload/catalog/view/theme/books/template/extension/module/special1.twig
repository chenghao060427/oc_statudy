<div class="box clearfix box-with-products with-scroll box-no-advanced">
    <!-- Carousel nav -->
    {#<a class="next" href="#myCarousel16685187" id="myCarousel16685187_next"><span></span></a>#}
    {#<a class="prev" href="#myCarousel16685187" id="myCarousel16685187_prev"><span></span></a>#}

    <script type="text/javascript">
        $(document).ready(function () {
            var owl16685187 = $(".box #myCarousel16685187 .carousel-inner");

            $("#myCarousel16685187_next").click(function () {
                owl16685187.trigger('owl.next');
                return false;
            })
            $("#myCarousel16685187_prev").click(function () {
                owl16685187.trigger('owl.prev');
                return false;
            });

            owl16685187.owlCarousel({
                slideSpeed: 500,
                singleItem: true
            });
        });
    </script>

    <div class="box-heading">{{ heading_title }}</div>
    <div class="strip-line"></div>
    <div class="clear"></div>
    <div class="box-content products">
        <div class="box-product">
            <div id="myCarousel16685187" class="carousel slide">
                <!-- Carousel items -->
                <div class="carousel-inner owl-carousel owl-theme" style="opacity: 1; display: block;">
                    <div class="owl-wrapper-outer">
                        <div class="owl-wrapper" style="width: 3512px; left: 0px; display: block; transition: all 1000ms ease 0s; transform: translate3d(-878px, 0px, 0px);">
                            <div class="owl-item" style="width: 878px;">
                                <div class="active item">
                                    <div class="product-grid">
                                        <div class="row">
                                            {% for product in products %}
                                            <div class="col-sm-3 col-xs-6  ">

                                                <!-- Product -->
                                                <div class="product clearfix product-hover">
                                                    <div class="left">
                                                        <div class="image ">
                                                            <a href="{{ product.href }}">
                                                                <img src="{{ product.thumb }}" alt="{{ product.name }}" class="">
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="right">
                                                        <div class="name">
                                                            <a href="{{ product.href }}">
                                                                {{ product.name }}
                                                            </a>
                                                        </div>

                                                        {% if product.rating %}
                                                            <div class="rating">
                                                                {% for i in 5 %}
                                                                    {% if product.rating < i %}
                                                                        <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
                                                                    {% else %}
                                                                        <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                                                    {% endif %}
                                                                {% endfor %}
                                                            </div>
                                                        {% endif %}
                                                        {% if product.price %}
                                                            <div class="price">
                                                                {% if not product.special %}
                                                                    <span class="price-new">{{ product.price }}</span>
                                                                {% else %}
                                                                    <span class="price-old">{{ product.special }}</span> <span class="price-new">{{ product.price }}</span>
                                                                {% endif %}
                                                            </div>
                                                        {% endif %}
                                                        <div class="only-hover">
                                                            <ul>
                                                                <li><a onclick="cart.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="{{ button_cart }}">
                                                                        <i class="fa fa-shopping-cart"></i>
                                                                    </a>
                                                                </li>

                                                                <li>
                                                                    <a onclick="compare.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="{{ button_compare }}">
                                                                        <i class="fa fa-exchange">
                                                                        </i>
                                                                    </a>
                                                                </li>

                                                                <li>
                                                                    <a onclick="wishlist.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="{{ button_wishlist }}">
                                                                        <i class="fa fa-heart"></i>
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="owl-controls clickable" style="display: block;">
                        <div class="owl-pagination">
                            <div class="owl-page"><span class=""></span></div>
                            <div class="owl-page active"><span class=""></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
